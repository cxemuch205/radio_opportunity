<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:drawable="@drawable/btn_play" android:state_pressed="true" android:state_checked="true">
  	    <shape android:shape="oval">
  	        <solid android:color="#330000ff"/>
  	        <stroke android:width="4dp" android:color="#330000ff"/>
  	    </shape>
  	</item>
  	<item android:drawable="@drawable/btn_stop" android:state_pressed="true" android:state_checked="false">
  	    <shape android:shape="oval">
  	        <solid android:color="#330000ff"/>
  	        <stroke android:width="4dp" android:color="#330000ff"/>
  	    </shape>
  	</item>
    <item android:drawable="@drawable/btn_play" android:state_checked="true"/>
  	<item android:drawable="@drawable/btn_stop" android:state_checked="false"/>

</selector>
